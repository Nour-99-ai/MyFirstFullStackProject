@model IEnumerable<FinalProSofra.Models.Category>

@{
    ViewData["Title"] = "Categories Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <!-- Display Category Name -->
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <!-- Display Category Image -->
                    <img src="@item.Image" alt="@item.CategoryName" style="width: 100px; height: 100px;" />
                </td>
                <td>
                    <!-- Links to Edit, Details, Delete actions -->
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a> |

                    <!-- Link to display products by category, passing the CategoryId -->
                    <a asp-controller="Home" asp-action="Product" asp-route-categoryId="@item.CategoryId">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
